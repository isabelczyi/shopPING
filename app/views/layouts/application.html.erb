    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
<% if !user_signed_in?%>
  <body style="background-color: #92B4A7">
  <% else %>
   <body>
   <% end %>
   <div>
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>
    <div class="pt-5">
    <%= yield %>
    </div>
   </div>
  </body>
</html>
