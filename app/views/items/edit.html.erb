<%= simple_form_for(@item) do |f| %>
  <%= f.association :list, label: "Select a list or leave this blank" %>
  <%= f.input :name, label: "Item name" %>
  <%= f.input :description %>
  <h3>locations</h3>
  <div id='locations'>
    <%= f.simple_fields_for :locations.first do |location| %>
      <%= render 'location_fields', :f => location %>
    <% end %>
  </div>
  <%= f.submit 'Save' %>
<% end %>
