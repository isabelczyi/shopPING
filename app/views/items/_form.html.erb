<% if policy(List).create? %>
  <%= link_to "Create a list", new_list_path %>
<% end %>
<%= simple_form_for(item) do |f| %>
  <%= f.association :list, label: "Select a list or leave this blank" %>
  <%= f.simple_fields_for :list do |p| %>
      <%= p.input :name, label: "Or create a new list here" %>
    <% end %>
  <%= f.input :name, label: "Item name" %>
  <%= f.input :description %>
  <h3>locations</h3>
  <div id='locations'>
    <%= f.simple_fields_for :locations do |location| %>
      <%= render 'location_fields', :f => location %>
    <% end %>
  </div>
  <%= f.submit 'Save' %>
<% end %>
