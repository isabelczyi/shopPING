<% items.each do |item| %>
  <div class="list-card my-3 d-flex flex-row" data-controller="swipe">
    <div class="p-2 links-card" >
        <strong>Item: </strong><%= link_to item.name.capitalize, item_path(item) %><br>
        <% if !item.description.empty? %>
            <strong>Description: </strong><%= item.description %>
        <% end %><br>
        <%= render "../views/items/checkbox", item: item %> <%= "Mark as completed" %>
    </div>
    <div class="hidden-buttons">
        <%= link_to edit_item_path(item), class: 'reveal-btn edit-btn' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to item_path(item), class: 'reveal-btn btn_hidden_delete',
              method: :delete,
              data: {confirm: "Are you sure?"} do %>
                <i class="fas fa-trash"></i>
              <% end%>
    </div>
    <% if false %>
      <div class="p-2 align-self-center">
        <br>
      </div>
    <% end %>
  </div>
<% end %>
