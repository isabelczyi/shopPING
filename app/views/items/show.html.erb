<div class="pt-3">
  <div class="d-flex justify-content-center">
    <div class="d-flex flex-column name-list" style="width: 300px; height: 100vh">
      <div class="px-3 py-3 list-card">
        <div>
          <h2><%= @item.name.capitalize %></h2>
        </div>
        <div>
          <div class="mb-2">
            <%= 'Description: ' %><br>
            <% if @item.description.empty? %>
              <%= 'No description available' %>
            <% else %>
              <%= @item.description %>
            <% end %>
          </div>
          <div class="mb-2">
            <%= render "checkbox", item: @item %><%= "Mark as completed" %><br>
          </div>
        </div>
        <div class="mb-4" style="width: 100%; height: 300px"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
        <div class="d-flex justify-content-between">
          <div class="my-3 align-self-bottom lists-add-btn" style="text-align: center">
            <% if policy(List).create? %>
              <%= link_to edit_item_path(@item), class: "lists-add-btn" do %>
              <%= "Edit" %>
              <% end %>
            <% end %>
          </div>
          <div class="my-3 align-self-bottom lists-add-btn" style="text-align: center">
            <% if policy(List).create? %>
              <%= link_to item_path(@item), method: :delete,
                data: {confirm: "Are you sure?"} do %>
                  <%= "Delete" %>
                <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="mt-2">
        <%= link_to "Back to all items", items_path %>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>
