<%= link_to completed_toggle_item_path(item), method: 'post', id: 'checkbox', remote: true, class: 'checkbox-link', style: "text-decoration: none; color: #6D3D14", data: { item_id: item.id } do %>
  <% checked_class = item.completed ? 'fa-check-square' : 'fa-square' %>
  <i class='far <%= checked_class %> checkbox'></i>
<% end %>
