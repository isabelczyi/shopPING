 <div class="pt-3">
  <div class="d-flex justify-content-center">
    <div class="d-flex flex-column name-list">
      <h3>Add an item to <%= @list.name %></h3>
      <%= simple_form_for [@list, @item] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <div id='locations'>
          <%= f.simple_fields_for :locations do |location| %>
            <%= render 'items/location_fields', :f => location %>
          <% end %>
        </div>
        <div class="d-flex justify-content-between">
        <%= f.submit 'Save', class: "lrg-pink-btn", style: "width: 50%; text-align: center;" %>
        <%= link_to "Cancel", :back, class: "sml-pink-btn ms-2", style: "width: 50%; text-align: center;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
