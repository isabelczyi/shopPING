<div class="pt-5">
  <div class="d-flex justify-content-center">
    <div class="d-flex flex-column name-list" style="width: 300px; height: 100vh">
      <h3>Your Lists</h3>
      <div class="mb-3">
        <% if current_user.lists.empty? %>
          <p>Please make a list!</p>
        <% else %>
          <div id="enablesortable">
            <%= render 'card' %>
          </div>
        <% end %>
      </div>
      <div class="my-3 align-self-bottom lists-add-btn" style="text-align: center">
        <% if policy(List).create? %>
          <%= link_to new_list_path class: "lists-add-btn" do %>
          <%= "+" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
