 <div class="pt-3">
  <div class="d-flex justify-content-center">
    <div class="d-flex flex-column name-list" style="width: 300px; height: 100vh">
      <div class="p-2">
        <h3>
          <%= @list.name %>
          <% if policy(@list).edit? %>
            <%# <%= link_to "Update", edit_list_path(@list) %>
            <%= link_to edit_list_path do %><i class="fas fa-pencil-alt"></i>
            <% end %>
          <% end %>
        </h3>
      </div>
      <div class="p-2">
        <%= render '../views/items/itemcard', items: @list.items %>
      </div>
      <div class="p-2">
        <% if policy(Item).create? %>
          <%= link_to "Add an item", new_list_item_path(@list) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
