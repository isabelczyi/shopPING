 <div class="pt-3">
  <div class="d-flex justify-content-center">
    <div class="d-flex flex-column name-list" style="width: 300px; height: 100vh">
      <div class="p-2 name-list">
        <div class="d-flex flex-row justify-content-between">
          <div><h3><%= @list.name %></h3></div>
          <div class="options">
              <% if policy(@list).edit? %>
                <%= link_to edit_list_path do %>
                  <%= image_tag "edit_icon.svg" %>
                <% end %>
              <% end %>
              <% if policy(Item).create? %>
                <%= link_to new_list_item_path(@list), class: "lists-add-btn" do %>
                  <%= image_tag "plus.svg" %>
                <% end %>
              <% end %>
          </div>
        </div>
      </div>
      <div >
        <%= render 'items/itemcard', items: @list.items %>
      </div>
    </div>
  </div>
</div>
