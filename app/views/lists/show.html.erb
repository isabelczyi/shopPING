 <div class="pt-3">
  <div class="d-flex justify-content-center">
    <div class="d-flex flex-column name-list" style="width: 300px; height: 100vh">
      <div class="p-2 d-flex flex-row">
        <div class="name-list p-2">
          <h3><%= @list.name %></h3>
        </div>
        <div class="p-2" style="position:absolute; top: 86px; right:80px;">
          <% if policy(@list).edit? %>
            <%# <%= link_to "Update", edit_list_path(@list) %>
            <%= link_to edit_list_path do %>
              <%= image_tag "edit_icon.svg" %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="p-2">
        <%= render '../views/items/itemcard', items: @list.items %>
      </div>
      <div class="add-list-icon" style="position:absolute; top: 95px; right: 50px;">
        <% if policy(Item).create? %>
          <%= link_to new_list_item_path(@list), class: "lists-add-btn" do %>
            <%= image_tag "plus.svg" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
